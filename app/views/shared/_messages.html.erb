<div id="messages" class="toast-container position-absolute p-3">
  <% flash.each do |key, message| %>
    <% if message.present? %>
      <div class="toast align-items-center" role="alert" aria-live="assertive" aria-atomic="true" data-controller="flash-message">
        <div class="d-flex">
          <div class="toast-body">
            <%= message %>
          </div>
          <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
